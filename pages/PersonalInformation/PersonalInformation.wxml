<view class='container'>
  <view class="section">
    <input placeholder="设置用户名" value="{{username}}" bindblur="handleBlur" data-type="username" bindconfirm="changeName" auto-focus />
  </view>

  <view class="section">
    <input placeholder="设置手机号码" value="{{phonenumber}}" bindblur="handleBlur" data-type="phonenumber" bindconfirm="changeName" auto-focus />
  </view>

  <view class="section">
    <input placeholder="设置收货地址" value="{{address}}" bindblur="handleBlur" data-type="address" bindconfirm="changeName" auto-focus />
  </view>

  <view>
  <text bindtap="chooseaddress" >地图选取  </text>
  <icon type="search" size="15" color='green'bindtap="chooseaddress"/>
  </view>
  <button  plain="true" class='button' bindtap='updateuser'>修改信息</button>
</view>